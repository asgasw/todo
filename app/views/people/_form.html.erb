<%= form_with(model: person, local: true) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :person_name %>
  </div>

  <div class="field">
    <%= form.label :section %>
    <%= form.collection_select :section_id, Section.all, :id, :name, { include_blank: true } %>
  </div>

  <div class="field">
    <%= form.label :pc %>
    <%= form.collection_select :pc_id, Pc.all, :id, :name, { include_blank: true } %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.fields_for :photo do |photo_form| %>
      <%= photo_form.file_field :image %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
